<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.progettoprogiii.UserLogin">
    <children>
        <TextField fx:id="usernameField" layoutX="146.0" layoutY="200.0" prefHeight="27.0" prefWidth="284.0" promptText="username" />
        <PasswordField fx:id="passwordField" layoutX="146.0" layoutY="247.0" prefHeight="26.0" prefWidth="284.0" promptText="password">
            <font>
                <Font name="Avenir Next Regular" size="13.0" />
            </font>
        </PasswordField>
        <Button layoutX="248.0" layoutY="325.0" mnemonicParsing="false" onMouseClicked="#handleLoginButtonAction" prefHeight="35.0" prefWidth="81.0" text="OK" textFill="black">
            <font>
                <Font name="Avenir Next Regular" size="13.0" />
            </font>
            <effect>
                <Reflection fraction="0.63" topOpacity="0.41" />
            </effect>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </Button>
        <ImageView fitHeight="130.0" fitWidth="150.0" layoutX="224.0" layoutY="52.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@account.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="35.0" fitWidth="54.0" layoutX="25.0" layoutY="23.0" onMouseClicked="#backPage" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Back_Arrow.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
